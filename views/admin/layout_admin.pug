doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Panel del Administrador

    // Bootstrap CSS
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css")
    link(rel="stylesheet" href="/styles.css")

  body
    // BOTÓN PARA ABRIR SIDEBAR
    nav.navbar.bg-primary.navbar-dark.mb-3
      .container-fluid
        button.btn.btn-warning(type="button", data-bs-toggle="offcanvas", data-bs-target="#offcanvasSidebar") ☰ Menú
        span.navbar-brand.mb-0.h1 Panel del Administrador

    // SIDEBAR OFFCANVAS
    .offcanvas.offcanvas-start#offcanvasSidebar(tabindex="-1", aria-labelledby="offcanvasSidebarLabel")
      .offcanvas-header.bg-dark.text-white
        h5.offcanvas-title#offcanvasSidebarLabel Menú
        button.btn-close.btn-close-white(type="button", data-bs-dismiss="offcanvas", aria-label="Close")
      .offcanvas-body.bg-dark
        ul.nav.flex-column
          li.nav-item.mb-2
            a.nav-link.text-white(href="/admin") Inicio
          li.nav-item.mb-2
            a.nav-link.text-white(href="/admin/patients") Pacientes SUS
          li.nav-item.mb-2
            a.nav-link.text-white(href="/admin/medics") Médicos
          li.nav-item.mb-2
            a.nav-link.text-white(href="/admin/users") Usuarios del sistema
          li.nav-item.mb-2
            a.nav-link.text-white(href="/admin/specialties") Especialidades
          li.nav-item.mb-2
            a.nav-link.text-white(href="/admin/healthcenters") Centros de salud
          li.nav-item.mb-2
            a.nav-link.text-white(href="/admin/availabilities") Horarios de atención

        hr
        a.nav-link.text-danger(href="/logout") Cerrar sesión

    // CONTENIDO PRINCIPAL
    .container.mt-3
      block content
    footer(class="bg-dark text-white py-4 mt-5")
      .container
        .row

          // ---- Columna de información ----
          .col-md-4.mb-3
            img(src="/img/sus-logo.png" alt="Logo SUS" class="mb-2" style="max-width:200px;")
            p.mb-0 © 2025 Sistema Único de Salud
            small.text-muted.text-white-50 Todos los derechos reservados

          // ---- Columna de enlaces ----
          .col-md-4.mb-3.text-md-center
            h5 Enlaces útiles
            ul.list-unstyled
              li
                a.text-white.text-decoration-none(href="/about")
                  i(class="bi bi-info-circle me-2") Información
              li
                a.text-white.text-decoration-none(href="/contact")
                  i(class="bi bi-envelope me-2") Contacto
              li
                a.text-white.text-decoration-none(href="/help")
                  i(class="bi bi-question-circle me-2") Ayuda

          // ---- Columna de redes sociales ----
          .col-md-4.mb-3.text-md-end
            h5 Síguenos
            a.text-white.me-3(href="https://facebook.com" target="_blank")
              i(class="bi bi-facebook fs-4")
            a.text-white.me-3(href="https://twitter.com" target="_blank")
              i(class="bi bi-twitter fs-4")
            a.text-white.me-3(href="https://instagram.com" target="_blank")
              i(class="bi bi-instagram fs-4")

    // Bootstrap JS
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
