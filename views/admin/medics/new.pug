extends ../layout_admin

block content
  .container.mt-4
    h1.mb-4.text-primary Registrar nuevo médico

    form(action="/admin/medics" method="POST")
      div
        label.form-label Nombre completo:
        input.form-control(type="text" name="fullname" required)

      div
        label.form-label CI / Usuario:
        input.form-control(type="text" name="username" required)

      div
        label.form-label Especialidad:
        select.form-select(name="specialtyId" required)
          each s in specialties
            option(value=s.id)= s.name

      div
        label.form-label Centro de salud:
        select.form-select(name="healthCenterId" required)
          each c in centers
            option(value=c.id)= c.name

      button.btn.btn-primary(type="submit") Registrar médico
