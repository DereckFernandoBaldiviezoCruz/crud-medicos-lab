doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Login

    // Bootstrap 5 CDN
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")

  body(class="bg-light d-flex align-items-center justify-content-center vh-100")

    .container
      .row.shadow-lg.rounded-4.overflow-hidden
        // Columna izquierda con imagen

        // Columna derecha con formulario
        .col-md-6.bg-white.p-5
          h2.text-center.mb-4 Login

          form(action="/auth/login" method="POST")
            .mb-3
              label.form-label(for="username") Usuario:
              input.form-control(type="text" id="username" name="username" required)

            .mb-3
              label.form-label(for="password") Contrase√±a:
              input.form-control(type="password" id="password" name="password" required)

            button.btn.btn-primary.w-100(type="submit") Acceder
        .col-md-6.p-0
          img(src="/img/sus-hospital-saude.jpg" alt="Imagen Login" class="img-fluid h-100 w-100 object-fit-cover")

    // Bootstrap JS
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
